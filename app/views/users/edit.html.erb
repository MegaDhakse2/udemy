<div class="container">
<%= form_with model: @user, url: edit_user_path, local: true do |form| %>

<div class="mb-5">
	<%= form.label :FirstName%>
  <%= form.text_field :firstName, class:"form-control", placeholder:"Krish" %>
  </div>
<div class="mb-5">
  <%= form.label :LastName%>
  <%= form.text_field :lastName, class:"form-control", placeholder:"yadhava" %>
  </div>
<div class="mb-5">
  <%= form.label :Email%>
  <%= form.text_field :email, class:"form-control", placeholder:"Krish@gmail.com" %>
  </div>
  <div class="mb-5">
	<%= form.label :Password%>
  <%= form.password_field :password, class:"form-control" %>
  </div>
  <div class="mb-5">
	<%= form.label :Confirm_Password%>
  <%= form.password_field :password_digest, class:"form-control" %>
  </div>
  <div class= "d-grid gap-2 col-6 mx-auto">
	<%= form.submit "Update and save ", class: "btn btn-secondary"  %>
	</div>

<% end %>
</div>
